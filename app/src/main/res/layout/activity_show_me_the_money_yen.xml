<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgColor_Euro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/ActionBar"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="보유 금액"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">   <!-- 수직 방향 -->

            <TextView
                android:id="@+id/Total_Money"
                android:background="@color/ActionBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="MONEY" />  <!-- 총 보유 금액 보여주는 textview -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin1"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin1"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin2"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin2"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin3"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin3"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin4"/>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin4"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin5" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin5"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin6" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin6"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin7" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin7"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin8" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin8"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin9" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin9"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:id="@+id/coin10" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/HMcoin10"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/resetB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/ActionBar"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:onClick="onClick"
                android:text="Reset" />

            <Button
                android:id="@+id/payB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/ActionBar"
                android:layout_marginHorizontal="2dp"
                android:onClick="onClick"
                android:text="Pay" />

            <Button
                android:id="@+id/editB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/ActionBar"
                android:layout_marginHorizontal="2dp"
                android:onClick="onClick"
                android:text="Edit" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>